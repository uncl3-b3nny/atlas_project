= form_for @tool do |f|
  - if @tool.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tool.errors.count, "error")} prohibited this tool from being saved:"
      %ul
        - @tool.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
